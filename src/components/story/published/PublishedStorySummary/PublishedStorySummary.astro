---
import type { PublishedStorySummary } from "@domain/index";

interface Props {
  story: PublishedStorySummary;
}

const { story } = Astro.props;

const { i18n } = Astro.locals.environment<
  App.WithStoryRepository & App.WithI18N
>();

let storyImageUrl = story.imageUrl;

if (!storyImageUrl) {
  storyImageUrl = "/images/placeholder.svg";
}
---

<div class="story">
  <a href={`/story/${story.id}`}>
    <img
      src={storyImageUrl}
      alt={i18n.t("page.site-stories.summary.image.alt-text", {
        title: story.title,
        author: story.author.name,
      })}
      title={i18n.t("page.site-stories.summary.image.alt-text", {
        title: story.title,
        author: story.author.name,
      })}
    />
    <div class="frontmatter">
      <div class="title">{story.title}</div>
      <div class="author">{story.author.name}</div>
    </div>
  </a>
</div>

<style>
  .story {
    width: 100%;
  }

  img {
    border: 1px solid black;
    border-bottom: 0;
    border-radius: var(--border-radius-medium) var(--border-radius-medium) 0 0;
    width: 100%;
    height: 192px;
    background-color: var(--color-placeholder);
  }

  .story:hover {
    box-shadow: 0rem 0rem 1rem 0.125rem #32393c;
    border-radius: var(--border-radius-medium);
  }

  a,
  a:visited {
    text-decoration: none;
    color: black;
  }

  .frontmatter {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;

    border: 1px solid black;
    border-radius: 0 0 var(--border-radius-medium) var(--border-radius-medium);
    padding: 0.5rem 1rem;
    text-align: center;

    background-color: var(--color-text);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;

    .title {
      font-weight: bold;
      font-size: 1.5rem;
    }

    .author {
      font-size: 1rem;
      font-style: italic;
    }
  }
</style>
