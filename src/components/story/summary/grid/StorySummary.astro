---
import type { StorySummary } from "@domain/index";

interface Props {
  story: StorySummary;
}

const { i18n } = Astro.locals.environment<
  App.WithStoryRepository & App.WithI18N
>();

const { story } = Astro.props;

let storyImageUrl = story.imageUrl;

if (!storyImageUrl) {
  storyImageUrl = "/images/placeholder.svg";
}
---

<div class="summary">
  <a href={`/author/story/${story.id}`}>
    <img
      src={storyImageUrl}
      alt={i18n.t("page.stories.summary.image.alt-text", {
        title: story.title,
      })}
      crossorigin="anonymous"
    />
    <div>{story.title}</div>
  </a>
  {
    story.publishedOn && (
      <a href={`/story/${story.id}`} class="published" target="_blank">
        {i18n.t("page.stories.summary.action.view-published-story")}
      </a>
    )
  }
</div>

<style>
  .summary {
    width: 100%;
    text-align: center;

    div {
      border: 1px solid black;
      border-radius: 0 0 var(--border-radius-medium) var(--border-radius-medium);
      padding: 0.5rem 1rem;
      font-size: 1.5rem;
      background-color: var(--color-text);
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
    }
  }

  img {
    border: 1px solid black;
    border-bottom: 0;
    border-radius: var(--border-radius-medium) var(--border-radius-medium) 0 0;
    width: 100%;
    height: 192px;
    background-color: var(--color-placeholder);
  }

  summary:hover {
    box-shadow: 0 0 1rem 0.125rem #32393c;
    border-radius: var(--border-radius-medium);
  }

  a,
  a:visited {
    text-decoration: none;
    color: black;
  }

  a.published,
  a.published:visited {
    display: inline-block;
    text-decoration: underline;
    color: var(--color-text);
    padding-top: 0.25rem;
  }
</style>
