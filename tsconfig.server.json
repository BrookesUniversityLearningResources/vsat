{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "outDir": "dist/build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "useUnknownInCatchVariables": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": [
        "src/domain/*"
      ],
      "@i18n/*": [
        "src/i18n/*"
      ],
      "@util/*": [
        "src/util/*"
      ],
    }
  },
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "src/components",
    "src/layouts",
    "src/hooks",
    "src/pages",
    "src/**/client/**/*",
    "tests",
    "dist"
  ]
}
